import ipaddress


print("Welcome to Team10 Network Scanner")

def user_input(ip_to_scan):
    try:
        ip = ipaddress.IPv4Address(ip_to_scan)
    except ipaddress.AddressValueError:
        print("Invalid IP address.")
       
    
    type_of_scan = input('Enter the type of scan or help (SV, UDP, OS): ').strip().upper()

    if type_of_scan == "HELP":
        print("SV: Service and version scan, UDP: UDP scan, OS: OS scan")
        type_of_scan = input('Enter the type of scan (SYN, UDP, OS): ').strip().upper()

    port_to_scan = 80  # Default port

    if type_of_scan == "OS" or type_of_scan == "SV":
        port_to_scan = input("Enter the port to scan: ").strip()
        
        if not port_to_scan.isdigit():
            print("Invalid port. Using default port 80.")
            port_to_scan = 80
        else:
            port_to_scan = int(port_to_scan)
            if port_to_scan < 1 or port_to_scan > 65535:
                print("Invalid port. Using default port 80.")
                port_to_scan = 80

    return str(ip), port_to_scan, type_of_scan

ip_to_scan, port_to_scan, type_of_scan = user_input(input("Enter the IP address to scan: "))

